---
import { SITE_TITLE, SITE_DESCRIPTION } from "@config";

import Head from "@components/base/Head.astro";
import Header from "@components/base/Header";
import Footer from "@components/base/Footer.astro";
import Container from "@components/base/Container.astro";

import Message from "@components/careers/Message.astro";
import Requirements from "@components/careers/Requirements.astro";
import Contracts from "@components/careers/Contracts.astro";
import Application from "@components/careers/Application.astro";
---

<!doctype html>
<html lang="ja">
  <head>
    <Head title={`${SITE_TITLE} | 採用情報`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-WD88TGDP"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <Header client:load />
    <main>
      <Container>
        <Message />
        <Requirements />
        <Contracts />
        <Application />
      </Container>
    </main>
    <Footer />
  </body>
</html>
