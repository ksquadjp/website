---
import { Image } from "astro:assets";

const clients = [
  "aiful.png",
  "sony.png",
  "aixtal.webp",
  "meijitosho.png",
  "stores.png",
  "wellness-kit.png",
  "tos.png",
  "renoarq.png",
].map((e) => `/assets/clients/${e}`);
---

<h2 class="text-center text-2xl font-bold lg:text-start lg:text-4xl">Our Partners</h2>
<div class="grid grid-cols-2 justify-center lg:grid-cols-4">
  {
    clients.map((c) => (
      <div class="m-auto p-4 lg:p-8">
        <Image src={c} height={800} width={800} alt={c} />
      </div>
    ))
  }
</div>
