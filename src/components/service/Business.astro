---
interface Props {
  name: string;
  nameKana: string;
  description: string;
  path: string;
  image: string;
}

const { name, nameKana, description, path, image } = Astro.props;
---

<div class="grid grid-cols-1 justify-around p-4 lg:grid-cols-2">
  <div>
    <a href={path}>
      <img src={image} class="m-3 mx-auto h-48 duration-150 hover:scale-105" alt={name} />
    </a>
  </div>

  <div>
    <div class="w-fit py-2 hover:underline">
      <a href={path}>
        <div class="text-2xl font-bold">{name}</div>
        <div class="text-sm font-bold">{nameKana}</div>
      </a>
    </div>
    <div class="py-2 text-sm">
      {description}
    </div>
    <div class="py-2 text-sm font-bold hover:underline">
      <a href={path}>View Details â†’</a>
    </div>
  </div>
</div>
