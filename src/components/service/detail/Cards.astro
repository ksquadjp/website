---
interface Props {
  title: string;
  contents: {
    subtitle: string;
    description: string;
  }[];
}

const { title, contents } = Astro.props;
---

<div class="p-4">
  <b class="text-3xl">{title}</b>
  <div class="grid grid-cols-1 py-4 lg:grid-cols-2">
    {
      contents.map((e) => (
        <div class="card my-4 bg-base-100 shadow-lg lg:w-96">
          <div class="card-body">
            <h2 class="card-title">{e.subtitle}</h2>
            <p>{e.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>
