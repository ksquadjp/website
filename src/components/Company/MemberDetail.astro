---
import { Image } from "astro:assets";

interface Props {
  name: string;
  nameKana: string;
  image: string;
  title: string;
  description: string;
}

const {
  name,
  nameKana,
  image = "https://cdn2.aprico-media.com/production/imgs/images/000/008/511/original.jpg?1505866639",
  title,
  description,
} = Astro.props;
---

<div class="lg:px-18 py-4 lg:py-0">
  <div class="relative mx-auto aspect-square h-60">
    <Image class="h-full w-full rounded-lg object-cover" src={image} alt={name} width={400} height={400} />
  </div>
  <div class="p-2 md:h-36">
    <h3 class="flex justify-center text-center text-xl font-bold lg:py-3 lg:text-2xl">
      {nameKana}
      <br />
      {name}
    </h3>
    <div class="">
      <h4 class="text-center text-stone-700">{title}</h4>
    </div>
  </div>
  <p class="px-2 md:h-64">
    {description}
  </p>
</div>
